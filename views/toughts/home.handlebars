<div class="home-header">
    {{#if search}}
    <h1>Você está buscando por: <span>{{search}}</span></h1>
    {{#if toughtsQty}}
    <p>Foram encontrados <span>{{toughtsQty}} pensamentos</span> relacionados a sua busca</p>
    {{else}}
    <p>Nenhum pensamento foi encontrado para <span>{{search}}</span></p>
    {{/if}}
    {{else}}
    <h1>Alguns dos nossos <span>pensamentos</span></h1>
    {{/if}}
    <form action="/" method="get">
        <input type="text" name="search" placeholder="Está buscando por algo?">
        <input type="submit" class="btn" value="Buscar">
    </form>
    <div class="order-container">
        <span>Ordenar por:</span>
        <form action="/" method="get">
        <input type="hidden" name="search" value="{{this.search}}">
        <input type="hidden" name="order" value="new"> 
        <button type="submit"><div class="bi bi-arrow-up"></div></button>
        </form>
        <form action="/" method="get">
        <input type="hidden" name="search" value="{{this.search}}">
        <input type="hidden" name="order" value="old"> 
        <button type="submit"><div class="bi bi-arrow-down"></div></button>
        </form>
        <a href="/">Limpar</a>
    </div>
</div>
<div class="toughts-container">
{{#each toughts}}
    <figure>
        <blockquote>
            "{{this.title}}"
        </blockquote>
        <figcaption>por <span>{{this.User.name}}</span> {{this.createdAtFormatted}}</figcaption>
    </figure>
{{/each}}
</div>